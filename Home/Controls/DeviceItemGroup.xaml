<UserControl x:Class="Home.Controls.DeviceItemGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Home.Controls" xmlns:converter="clr-namespace:Home.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Resources>
            <local:DeviceImageConverter x:Key="localDeviceImageConverter" />
            <local:ScreenshotVisibiltyConverter x:Key="screenshotVisiblityConverter" />
            <converter:OSNameConverter x:Key="osNameConverter" />
            <converter:OS64BitConverter x:Key="os64BitConverter" />
            <BooleanToVisibilityConverter x:Key="boolToVisibiltyConverter" />
            <converter:ScreenshotConverter x:Key="deviceScreenConverter" />
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel>
            <!-- #6D77D7 -->
            <Expander x:Name="ExpandList" IsExpanded="True">
                <Expander.Header>
                    <TextBlock Text="{Binding GroupName}" Foreground="{DynamicResource BlackBrush}" FontWeight="Bold" />
                </Expander.Header>
            </Expander>

            <Border Margin="26,0,0,0" BorderBrush="{DynamicResource BlackBrush}" BorderThickness="0 0 0 1" />
        </StackPanel>


        <ListView x:Name="ListViewDevices" Visibility="{Binding ElementName=ExpandList, Path=IsExpanded, Converter={StaticResource boolToVisibilityConverter}}" ItemsSource="{Binding Devices}" Background="{DynamicResource WhiteBrush}" BorderThickness="0" Grid.Row="1" SelectionChanged="ListViewDevices_SelectionChanged" PreviewMouseWheel="ListViewDevices_PreviewMouseWheel">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <!-- MinWidth="{Binding ItemWidth, RelativeSource={RelativeSource Self}}" ItemHeight="{Binding (ListView.View).ItemHeight, RelativeSource={RelativeSource AncestorType=ListView}}" -->
                    <WrapPanel Width="{Binding (FrameworkElement.ActualWidth), RelativeSource={RelativeSource AncestorType=ScrollContentPresenter}}" ItemWidth="{Binding (ListView.View).ItemWidth, RelativeSource={RelativeSource AncestorType=ListView}}" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Background="Transparent" Width="300" ContextMenu="{DynamicResource DeviceMenu}">
                        <Grid.ToolTip>
                            <ToolTip>
                                <Image Source="{Binding ., Converter={StaticResource deviceScreenConverter}}" />
                            </ToolTip>
                        </Grid.ToolTip>

                        <Border Visibility="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=DataContext.IsScreenshotView, Converter={StaticResource screenshotVisiblityConverter}, ConverterParameter=1}" Background="Black" Height="200">
                            <Grid>
                                <Image Visibility="Visible" StretchDirection="DownOnly" Source="{Binding ., Converter={StaticResource deviceScreenConverter}}" />
                                <TextBlock Foreground="{DynamicResource BlackBrush}" Text="{Binding Environment.MachineName}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                            </Grid>
                        </Border>

                        <Grid Visibility="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=DataContext.IsScreenshotView, Converter={StaticResource screenshotVisiblityConverter}, ConverterParameter=2}">                           
                            <Grid.Resources>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Foreground" Value="{DynamicResource BlackBrush}" />
                                </Style>
                            </Grid.Resources>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image VerticalAlignment="Top" HorizontalAlignment="Center" StretchDirection="DownOnly" Height="64" Width="64" Margin="2" Source="{Binding ., Converter={StaticResource localDeviceImageConverter}}" />
                            <StackPanel Margin="5,5,0,0" Grid.Column="2" Orientation="Vertical">
                                <TextBlock TextDecorations="Underline">
                                <Run Text="{Binding Name}" FontWeight="Bold" />
                                <Run Text="(" /><Run Text="{Binding Environment.TotalRAM}" />
                                <Run Text="GB)" />
                                </TextBlock>
                                <TextBlock Text="{Binding IP}" />
                                <TextBlock>
                                <Run Text="{Binding OS, Converter={StaticResource osNameConverter}}" />
                                <Run Text="(" /><Run Text="{Binding Environment.Is64BitOS, Converter={StaticResource os64BitConverter}}" /><Run Text=")" />
                                </TextBlock>

                                <TextBlock Text="{Binding Environment.CPUName}" TextTrimming="CharacterEllipsis" />
                                <TextBlock Text="{Binding Environment.Motherboard}" TextTrimming="CharacterEllipsis" />
                                <!-- <TextBlock Text="{Binding Environment.Graphics}" TextTrimming="CharacterEllipsis" /> -->
                            </StackPanel>
                        </Grid>

                    </Grid>
                    
               
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>