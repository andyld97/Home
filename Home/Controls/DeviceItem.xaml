<UserControl x:Class="Home.Controls.DeviceItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Home.Controls"
             mc:Ignorable="d" 
             Width="300" Height="80">
    <Border BorderBrush="Gray" BorderThickness="1.5" Background="White">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Image Source="../resources/images/device_windows.png" Width="64" />
                <Ellipse Fill="Red" Grid.Row="1" Stroke="Black" StrokeThickness="1" Width="20" Height="20" HorizontalAlignment="Center" Margin="0,5,0,10" />
            </Grid>


            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Foreground="Black" Text="Andy-PC" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    <TextBlock Foreground="Black" Text="IP: 192.168.178.38" TextAlignment="Center"/>
                    <TextBlock Foreground="Black" Text="Zuletzt gesehen: 24.11.2021 13:04 Uhr" TextAlignment="Center"/>
                </StackPanel>
            </Grid>

        </Grid>
    </Border>
</UserControl>
